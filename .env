# VerbalCodeAI Configuration - SPEED OPTIMIZED
# =============================================

# Providers
AI_CHAT_PROVIDER=ollama
AI_EMBEDDING_PROVIDER=ollama
AI_DESCRIPTION_PROVIDER=ollama
AI_AGENT_BUDDY_PROVIDER=ollama

# Ollama Configuration
OLLAMA_HOST=192.168.0.60:11434

# Models - SMALLER/FASTER
CHAT_MODEL=llama3.2:3b
EMBEDDING_MODEL=all-minilm:22m
DESCRIPTION_MODEL=llama3.2:3b
AI_AGENT_BUDDY_MODEL=llama3.2:3b

# Performance Settings
EMBEDDING_API_DELAY_MS=50
DESCRIPTION_API_DELAY_MS=50
MAX_THREADS=6

# Model Parameters
CHAT_MODEL_TEMPERATURE=0.7
DESCRIPTION_MODEL_TEMPERATURE=0.3
CHAT_MODEL_MAX_TOKENS=4096
DESCRIPTION_MODEL_MAX_TOKENS=1024

# Features
ENABLE_MARKDOWN_RENDERING=TRUE
SHOW_THINKING_BLOCKS=FALSE
ENABLE_STREAMING_MODE=TRUE
MEMORY_ENABLED=TRUE
MAX_MEMORY_ITEMS=10
CHAT_LOGS=FALSE